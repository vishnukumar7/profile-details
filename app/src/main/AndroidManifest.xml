<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.novatium.android.profiledetails">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.RegisterActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name=".activities.RecyclerViewActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name=".activities.ViewCollectionActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name=".activities.ScreenCastActivity"
            android:theme="@style/Theme.MaterialComponents" />
        <activity
            android:name=".activities.GenreticActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>